<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MorseCodeApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Morse Code Generator!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Margin="0,0,0,0" >

            <Label x:Name="MorseT" Text=""/>
            <Label x:Name="EnglishT" Text=""/>

            <StackLayout Orientation="Horizontal">

                <Button Text="Dot" Clicked="Handle_Clicked"/>
                <Button Text="Line" Clicked="Handle_Clicked"/>
                <Button Text="Gap" Clicked="Handle_Clicked"/>
                
            </StackLayout>
        </StackLayout>


    </StackLayout>

</ContentPage>
